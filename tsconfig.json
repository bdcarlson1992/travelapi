{
  "compilerOptions": {
    "target": "es6", 
    "module": "commonjs", 
    "lib": ["es6", "dom"], 
    "jsx": "react-jsx", 
    "outDir": "./dist", 
    "rootDir": "./src", 
    "strict": true, 
    "esModuleInterop": true, 
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true, 
    "moduleResolution": "node", 
    "typeRoots": ["./node_modules/@types"], 
    "resolveJsonModule": true 
  },
  "include": [
    "src/**/*.ts", 
    "src/**/*.tsx" // Include both backend `.ts` and frontend `.tsx` files
  ],
  "exclude": [
    "node_modules", 
    "dist", 
    "src/components/**/*.tsx", // Exclude React components if not relevant to backend
    "src/**/*.test.ts",        // Optionally exclude backend test files
    "src/**/*.test.tsx"        // Optionally exclude frontend test files
  ]
}
